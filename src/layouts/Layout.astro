---
import "../styles/global.css";
import { Navigation } from "@/components/Navigation";

interface Props {
  title?: string;
  showNavigation?: boolean;
}

const { title = "10x Cards", showNavigation = true } = Astro.props;
const pathname = new URL(Astro.request.url).pathname;
const isLoginPage = pathname === "/";

// Don't show navigation on login page
const shouldShowNavigation = showNavigation && !isLoginPage;
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content="10x Cards - Learn faster with AI" />
  </head>
  <body>
    {shouldShowNavigation && <Navigation client:load />}
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
